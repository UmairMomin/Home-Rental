<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="UTF-8">
  <link rel="icon" type="image/png" href="Images/code-alt-regular-24.png">
  <title>Admin Panel</title>
  <link rel="stylesheet" href="/css/navbar.css">
   <link rel="stylesheet" href="/css/admin.css">
   <script src="/js/index.js"></script>
  <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <%- include('partials/header.ejs') %>
  <section class="home-section">
    <div class="home-content">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope="col">Address</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
          </tr>
        </thead>
        <tbody>
          <% for (var i=0; i<data.length; i++) { %>
          <tr>
            <td><%= data[i].ImageURL %></td>
            <td><%= data[i].Name %></td>
            <td><%= data[i].Category %></td>
            <td><%= data[i].Address %></td>
            <td><%= data[i].Description %></td>
            <td><%= data[i].Price %></td>
            <td>
                <a href="/admin/update/<%- data[i]._id %>" type="button" class="btn btn-dark btn-small btn-"><i
                    class="bi bi-person-x"></i>Update</a>
              </td>
            <td>
              <a href="/admin/delete/<%- data[i]._id %>" type="button" class="btn btn-dark btn-small btn-"><i
                  class="bi bi-person-x"></i>Delete</a>
            </td>
            
          </tr>

          <% } %>
        </tbody>
    
      </table>
  </section>
</body>
</html>