<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/navbar.css" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet" />
    <script src="/js/index.js"></script>
  </head>
  <body>
    <%- include('partials/header.ejs') %>
    <section class="Posts">
      <div class="main_container">
        <div class="row">
          <% for (var i=0; i<data.length; i++) { %>
          <div class="col">
            <div class="card">
              <div class="card_image">
                <img src="<%= data[i].ImageURL %>" alt="" />
              </div>
              <div class="card_content">
                <div class="category"><%= data[i].Category %></div>
                <div class="name"><%= data[i].Name %></div>
                <div class="address">
                  <span><i class="bx bxs-map"></i></span><%= data[i].Address %>
                </div>
                <!-- <div class="pricebox">12,000</div> -->
              </div>
              <div class="buttons">
                <a href="/prod_details/<%= data[i]._id%>">
                  <button class="button button--animated">
                    <span class="button__text">View Details !!</span>
                    <span class="button__icon">→</span>
                  </button>
                </a>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </section>
  </body>

</html>
